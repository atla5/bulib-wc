{
  "name": "bulib-wc",
  "version": "0.0.6",
  "description": "collection of web components and styles used at Boston University Libraries",
  "files": [ "dist" ],
  "scripts": {
    "build:owc": "rollup -c rollup.config.owc.js",
    "build": "rollup -c rollup.config.js",
    "watch": "rollup -c --watch",
    "serve": "http-server . && npm run watch",
    "start": "npm run storybook & npm run watch",
    "storybook": "start-storybook -p 9001",
    "storybook:build": "build-storybook -o _site -s storybook-static"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bulib/bulib-wc.git"
  },
  "keywords": [
    "web-components",
    "code4lib",
    "lit-element",
    "lit-html"
  ],
  "author": "bulib",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bulib/bulib-wc/issues"
  },
  "homepage": "https://github.com/bulib/bulib-wc#readme",
  "dependencies": {
    "@open-wc/polyfills-loader": "^0.3.1",
    "lit-element": "^2.1.0",
    "lit-html": "^1.0.0"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^0.3.0",
    "@open-wc/demoing-storybook": "^0.2.0",
    "http-server": "^0.11.1",
    "owc-dev-server": "^0.3.0",
    "rollup": "^1.6.0",
    "rollup-plugin-babel-minify": "^8.0.0",
    "rollup-plugin-node-resolve": "^5.0.0"
  }
}
