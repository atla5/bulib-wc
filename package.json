{
  "name": "bulib-wc",
  "version": "0.0.12",
  "description": "collection of web components and styles used at Boston University Libraries",
  "main": "src/index.js",
  "module": "src/index.js",
  "files": [
    "assets/",
    "dist/bundle*.js",
    "dist/bundle.css"
  ],
  "scripts": {
    "clean": "rm -rf node_modules/ || true",
    "cy:verify": "cypress verify",
    "reinstall": "npm run clean && npm install",
    "prestart": "npm run build:css",
    "start": "start-storybook -p 9001",
    "build": "rollup -c rollup.config.js",
    "build:css": "./scripts/bundle_css.sh",
    "build:owc": "rollup -c rollup.config.owc.js",
    "build:storybook": "npm run reinstall && build-storybook -o _site -s storybook-static",
    "deploy:storybook": "npm run build:storybook && storybook-to-ghpages -o dist",
    "publish": "npm publish && npm run deploy:storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bulib/bulib-wc.git"
  },
  "keywords": [
    "web-components",
    "code4lib",
    "lit-element",
    "lit-html"
  ],
  "author": "bulib",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bulib/bulib-wc/issues"
  },
  "homepage": "https://github.com/bulib/bulib-wc#readme",
  "dependencies": {
    "@open-wc/polyfills-loader": "^0.3.2",
    "lit-element": "^2.1.0",
    "lit-html": "^1.0.0"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^0.3.0",
    "@open-wc/demoing-storybook": "^0.2.0",
    "@storybook/storybook-deployer": "^2.8.1",
    "cypress": "^3.4.0",
    "rollup": "^1.6.0",
    "rollup-plugin-babel-minify": "^8.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "scss": "^0.2.4"
  }
}
