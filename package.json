{
  "name": "bulib-wc",
  "version": "0.1.0",
  "description": "collection of web components and styles used at Boston University Libraries",
  "main": "docs/index.js",
  "directories": {
    "doc": "docs"
  },
  "files": [ "dist" ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "site:build": "npm run storybook:build",
    "prebuild": "rm -rf dist || true",
    "build": "rollup -i src/index.js -o dist/bundle.js --format esm --inlineDynamicImports",
    "storybook": "start-storybook -p 9001",
    "storybook:build": "build-storybook -o _site -s storybook-static",
    "start:build": "http-server dist -o -c-1",
    "watch:build": "rimraf dist && rollup --watch -c rollup.config.js & http-server dist -o -c-1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bulib/bulib-wc.git"
  },
  "keywords": [
    "web-components",
    "code4lib",
    "lit-element"
  ],
  "author": "bulib",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bulib/bulib-wc/issues"
  },
  "homepage": "https://github.com/bulib/bulib-wc#readme",
  "dependencies": {
    "@open-wc/polyfills-loader": "^0.3.1",
    "lit-element": "^2.1.0",
    "lit-html": "^1.0.0"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^0.3.0",
    "http-server": "^0.11.1",
    "owc-dev-server": "^0.3.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.6.0",
    "@open-wc/demoing-storybook": "^0.2.0"
  }
}
